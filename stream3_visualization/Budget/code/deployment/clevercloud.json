{
  "build": {
    "cache_directories": [
      "venv"
    ]
  },
  "deploy": {
    "module": "../dashboard:server"
  },
  "hooks": {
    "pre_build": "pip install -r deployment/requirements.txt"
  },
  "build": {
    "cache_directories": [
      "venv"
    ]
  },
  "environment": {
    "PYTHONPATH": "/app",
    "DASH_ENV": "production",
    "DEBUG": "False"
  },
  "scaling": {
    "min_instances": 1,
    "max_instances": 3
  }
} 